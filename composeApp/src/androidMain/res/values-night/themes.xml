<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.JustRelax" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Compose yüklenene kadar görünecek arka plan (Koyu) -->
        <item name="android:windowBackground">@color/window_background_dark</item>

        <!-- Status Bar şeffaf -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- İkonlar açık renk olsun (Arka plan koyu olduğu için) -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowAnimationStyle">@style/WindowFadeAnimation</item>
    </style>
</resources>
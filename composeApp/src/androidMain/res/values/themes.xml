<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.JustRelax" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Compose yüklenene kadar görünecek arka plan -->
        <item name="android:windowBackground">@color/window_background_light</item>

        <!-- Status Bar şeffaf olsun, Compose arkasına çizebilsin -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- İkonlar koyu renk olsun (Arka plan açık olduğu için) -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/WindowFadeAnimation</item>
    </style>


</resources>